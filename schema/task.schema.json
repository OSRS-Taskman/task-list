{
	"$id": "http://osrs-taskman.com/task.schema.json",
	"$schema": "http://json-schema.org/draft-07/schema",
	"type": "object",
	"required": ["id", "name", "wikiLink", "imageLink", "displayItemId"],
	"additionalProperties": false,
	"properties": {
		"id": {
			"type": "string",
			"format": "uuid"
		},
		"name": {
			"type": "string",
			"maxLength": 255
		},
		"tip": {
			"type": "string"
		},
		"wikiLink": {
			"type": "string",
			"format": "uri",
			"pattern": "^https://"
		},
		"imageLink": {
			"type": "string",
			"format": "uri",
			"pattern": "^https://"
		},
		"displayItemId": {
			"type": "integer",
			"minimum": 0
		},
		"verification": {
			"anyOf": [
				{
					"type": "object",
					"required": ["method", "itemIds", "count"],
					"additionalProperties": false,
					"properties": {
						"method": {
							"type": "string",
							"const": "collection-log"
						},
						"itemIds": {
							"type": "array",
							"items": {
								"type": "integer",
								"minimum": 0
							}
						},
						"count": {
							"type": "integer",
							"minimum": 1
						}
					}
				},
				{
					"type": "object",
					"required": ["method", "region", "difficulty"],
					"additionalProperties": false,
					"properties": {
						"method": {
							"type": "string",
							"const": "achievement-diary"
						},
						"region": {
							"type": "string"
						},
						"difficulty": {
							"type": "string"
						}
					}
				}
			]
		}
	}
}
